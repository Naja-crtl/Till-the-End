<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/iconGift"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/launcher"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvGiftType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gift Type"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="cursive"
        app:layout_constraintStart_toEndOf="@id/iconGift"
        app:layout_constraintTop_toTopOf="@id/iconGift"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteGift"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tvGiftDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Details..."
        android:textSize="14sp"
        android:fontFamily="cursive"
        app:layout_constraintStart_toStartOf="@id/tvGiftType"
        app:layout_constraintTop_toBottomOf="@id/tvGiftType"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteGift"/>

    <ImageView
        android:id="@+id/btnEditGift"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteGift"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/btnDeleteGift"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
