<resources>
    <style name="Widget.Theme.MyApplication.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.MyApplication.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!-- Style for the date buttons -->
    <style name="DateButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">8dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- Style for the tab buttons -->
    <style name="TabButtonStyle">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">8dp</item>
    </style>


</resources>